<odoo>
    <record id="view_customer_image_kanban" model="ir.ui.view">
        <field name="name">customer.image.kanban</field>
        <field name="model">customer.image</field>
        <field name="arch" type="xml">

            <kanban>
                <field name="id"/>
                <field name="image_1920"/>
                <field name="compare"/>

                <templates>
                    <t t-name="card">
                        <div class="o_kanban_card position-relative">

                            <!-- CHECKBOX -->
                            <div style="position:absolute; top:8px; left:8px; z-index:10;">
                                <field name="compare"/>
                            </div>

                            <!-- IMAGE -->
                            <img t-att-src="kanban_image('customer.image', 'image_1920', record.id.value)"
                                 class="img img-fluid"/>

                        </div>
                    </t>
                </templates>
            </kanban>

        </field>
    </record>
</odoo>
