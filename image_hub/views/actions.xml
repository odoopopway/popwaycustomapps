<odoo>

    <record id="action_workspace" model="ir.actions.act_window">
        <field name="name">Patient Image Workspace</field>
        <field name="res_model">customer.image.workspace</field>
        <field name="view_mode">list,form</field>
        <field name="domain">
        <![CDATA[
            [
                ('partner_id', '=', context.get('default_partner_id')) if context.get('default_partner_id') else ('partner_id', '!=', False)
            ]
        ]]>
    </field>    
        </record>

    <record id="action_category" model="ir.actions.act_window">
        <field name="name">Image Categories</field>
        <field name="res_model">customer.image.category</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="action_tag" model="ir.actions.act_window">
        <field name="name">Image Tags</field>
        <field name="res_model">customer.image.tag</field>
        <field name="view_mode">list,form</field>
    </record>

<record id="action_customer_image_comparison" model="ir.actions.act_window">
    <field name="name">Image Comparison</field>
    <field name="res_model">customer.image.comparison</field>
    <field name="view_mode">list,form</field>
</record>

<record id="action_open_image_editor" model="ir.actions.client">
    <field name="name">Image Editor</field>
    <field name="tag">image_editor</field>
</record>
<record id="action_open_image_upload_wizard" model="ir.actions.act_window">
    <field name="name">Upload Images</field>
    <field name="res_model">customer.image.upload.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
    <field name="context">
            {
                'default_workspace_id': active_id
            }
        </field>
</record>


</odoo>
