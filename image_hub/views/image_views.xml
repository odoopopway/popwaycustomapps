<odoo>
    <record id="view_customer_image_form" model="ir.ui.view">
        <field name="name">customer.image.form</field>
        <field name="model">customer.image</field>
        <field name="arch" type="xml">
            <form string="Customer Image" duplicate="true">
                <sheet>

                    <group>
                        <field name="partner_id" required="1"/>
                        <field name="category_id"/>
                        <field name="tag_ids" widget="many2many_tags"/>
                    </group>

                    <group>
                        <field name="image_1920"
                               string="Image"
                               widget="image"
                               class="oe_avatar"
                               options="{'preview_image': 'image_1920'}"/>
           

                    </group>

                    <group>
                        <field name="description"
                               placeholder="Add image notes or description..."/>
                    </group>

                </sheet>
            </form>
        </field>
    </record>
</odoo>
