<odoo>
    <record id="view_customer_image_upload_wizard" model="ir.ui.view">
        <field name="name">customer.image.upload.wizard.form</field>
        <field name="model">customer.image.upload.wizard</field>
        <field name="arch" type="xml">
            <form string="Upload Images">
                <group>
                    <field name="workspace_id" invisible="1"/>
                    <field name="category_id"/>
                    <field name="tag_ids" widget="many2many_tags"/>
                    <field name="description"/>
                </group>

                <group>
                    <field name="attachment_ids"
                           widget="many2many_binary"/>
                </group>

                <footer>
                    <button name="action_upload_images"
                            type="object"
                            string="Upload"
                            class="btn-primary"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
